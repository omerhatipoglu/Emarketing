
@{
    ViewBag.Title = "ReklamProducts";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<style>
    .one {
        margin-top: 100px;
        margin-bottom: 100px;
        margin-right: 100px;
        padding-top: 10px;
        padding-left: 10px;
        padding-right: 10px;
        padding-bottom: 10px;
    }
</style>
<div class="container" ng-init="GetAllRkProducts()">
    <div class="one">
        <h1 class="page-header">Reklamlı Ürünler </h1>
    </div>
    <div class="one">

        <input type="text" placeholder="Arama" ng-model="ara" />

        <table class="table table-bordered table-hover table-responsive table-striped ">
            <thead>
                <tr>
                    @*<th>Reklamlı Ürün ID</th>*@
                    <th>Reklamlı Ürün Ad</th>
                    <th>Ürün Resmi</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="s in reklam | filter:ara">
                    @*<td>{{s.ReklamliUrunID}}</td>*@
                    <td>{{s.AltUrunlerAd}}<br /></td>
                    <td><img src="{{s.Resim}}"></td>
                </tr>
            </tbody>
        </table>

    </div>


</div>


