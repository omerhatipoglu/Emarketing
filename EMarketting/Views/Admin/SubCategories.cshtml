
@{
    ViewBag.Title = "SubCategories";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<style>
    .one {
        margin-top: 100px;
        margin-bottom: 100px;
        margin-right: 100px;
        padding-top: 10px;
        padding-left: 10px;
        padding-right: 10px;
        padding-bottom: 10px;
    }
</style>
<div class="container" ng-init="GetAllSubCategories()">
    <div class="one">
        <h1 class="page-header">Alt Kategoriler <small>Alt Kategori İşlemleri</small></h1>
    </div>
    <div class="one">
        <div>
            <input type="text" placeholder="Arama" ng-model="subcat" />
        </div>
        <table class="table table-bordered table-hover table-responsive table-striped">
            <thead>
                <tr>
                    <th>Alt Kategori Ad</th>
                    <th>Kategori <br /><select ng-options="item.KategoriID as item.KategoriAd for item in categories" ng-model="subcategory.KategoriID"><option value=""></option></select></th>
                    <th>Detay</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="s in subcategories | filter : subcat">
                    <td>{{s.AltKategoriAd}}</td>
                    <td>{{s.KategoriAd}}</td>
                    <td><span class="btn btn-success glyphicon glyphicon-camera" ng-click="GetSubCategoryBySubCategoryID(s.AltKategoriID)"></span></td>
                    <td><span class="btn btn-danger glyphicon glyphicon-remove" ng-click="SubCatDelete(s.AltKategoriID)"></span></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="one">
        <table class="table table-bordered table-hover table-responsive table-striped">
            <thead>
                <tr>
                    <th>Alt Kategori ID</th>
                    <th>Alt Katetgori Ad</th>
                    <th>Kategori</th>
                    <th>Güncelle/Kaydet</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{subcategory.AltKategoriID}}</td>
                    <td><input type="text" ng-model="subcategory.AltKategoriAd" /></td>
                    <td><select ng-options="item.KategoriID as item.KategoriAd for item in categories" ng-model="subcategory.KategoriID"><option value=""></option></select></td>
                    <td><span class="btn btn-info glyphicon glyphicon-floppy-save" ng-click="SubCatEdit(subcategory)"></span></td>
                </tr>
                <tr>
                    <th>Yeni Giriş</th>
                    <td><input type="text" ng-model="subcategoryadd.AltKategoriAd" /></td>
                    <td><select ng-options="item.KategoriID as item.KategoriAd for item in categories" ng-model="subcategoryadd.KategoriID"><option value=""></option></select></td>
                    <td><span class="btn btn-info glyphicon glyphicon-floppy-saved" ng-click="SubCatAdd(subcategoryadd)"></span></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


