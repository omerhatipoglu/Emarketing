
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}
<style>
    .one{
        margin-top: 100px;
        margin-bottom: 100px;
        margin-right: 100px;
        padding-top: 10px;
        padding-left: 10px;
        padding-right: 10px;
        padding-bottom: 10px;
    }
</style>
<div class="container">
    <div class="one">
        <h1 class="page-header">Kategoriler <small>Kategori İşlemleri</small></h1>
    </div>
    <div class="one">
        <div>
            <input type="text" placeholder="Arama" ng-model="cat"/>
        </div>
        <table class="table table-bordered table-hover table-responsive table-striped">
            <thead>
                <tr>
                    <th>Kategori Ad</th>
                    <th>Açıklama</th>
                    <th>Detay</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="c in categories | filter : cat">
                    <td>{{c.KategoriAd}}</td>
                    <td>{{c.Aciklama}}</td>
                    <td><span class="btn btn-success glyphicon glyphicon-camera" ng-click="GetCategoryByCategoryID(c.KategoriID)"></span></td>
                    <td><span class="btn btn-danger glyphicon glyphicon-remove" ng-click="Delete(c.KategoriID)"></span></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="one">
        <table class="table table-bordered table-hover table-responsive table-striped">
            <thead>
                <tr>
                    <th>Kategori ID</th>
                    <th>Katetgori Ad</th>
                    <th>Açıklama</th>
                    <th>Güncelle/Kaydet</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{category.KategoriID}}</td>
                    <td><input type="text" ng-model="category.KategoriAd" /></td>
                    <td><input type="text" ng-model="category.Aciklama" /></td>
                    <td><span class="btn btn-info glyphicon glyphicon-floppy-save" ng-click="Edit(category)"></span></td>
                </tr>
                <tr>
                    <th>Yeni Giriş</th>
                    <td><input type="text" ng-model="categoryadd.KategoriAd" /></td>
                    <td><input type="text" ng-model="categoryadd.Aciklama" /></td>
                    <td><span class="btn btn-info glyphicon glyphicon-floppy-saved" ng-click="Add(categoryadd)"></span></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

