@model EMarketting.Models.DTOs.BigDTO
@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<div id="container" ng-controller="dbController">
    <div class="container">
        <!-- Breadcrumb Start-->
        <ul class="breadcrumb">
            <li><a href="index.html"><i class="fa fa-home"></i></a></li>
            <li><a href="login.html">Üyelik</a></li>
            <li><a href="register.html">Kayıt Ol</a></li>
        </ul>
        <!-- Breadcrumb End-->
        <div class="row">
            <!--Middle Part Start-->
            <div class="col-sm-9" id="content">
                <h1 class="title">Üye Kaydı</h1>
                <p>Eğer üye iseniz, lütfen <a href="login.html">Giriş Sayfası</a>'ndan giriş yapınız.</p>
                <form class="form-horizontal">
                    <fieldset id="account">
                        <legend>Kişi Bilgileri</legend>
                        <div style="display: none;" class="form-group required">
                            <label class="col-sm-2 control-label">Customer Group</label>
                            <div class="col-sm-10">
                                <div class="radio">
                                    <label>
                                        <input type="radio" checked="checked" value="1" name="customer_group_id">
                                        Default
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label for="input-firstname" class="col-sm-2 control-label">Adınız</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="input-firstname" placeholder="Adınız" value="" ng-model="user.Ad">
                            </div>
                        </div>
                        <div class="form-group required">
                            <label for="input-lastname" class="col-sm-2 control-label">Soyadınız</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="input-lastname" placeholder="Soyadınız" value="" ng-model="user.Soyad">
                            </div>
                        </div>
                        <div class="form-group required">
                            <label for="input-email" class="col-sm-2 control-label">E-Posta Adresiniz</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="input-email" placeholder="E-Posta Adresiniz" value="" ng-model="user.Email">
                            </div>
                        </div>
                        <div class="form-group required">
                            <label for="input-telephone" class="col-sm-2 control-label">Telefon</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" id="input-telephone" placeholder="Telefon" value="" ng-model="user.TelNo">
                            </div>
                        </div>
                        <div class="form-group required">
                            <label for="input-telephone" class="col-sm-2 control-label">Doğum Günü</label>
                            <div class="col-sm-10">
                                <input type="datetime-local" class="form-control" id="input-telephone" placeholder="Doğum Günü" value="" ng-model="user.DogumGunu">
                            </div>
                        </div>
                    </fieldset>
                    <fieldset id="address">
                        <legend>Adres Bilgileri</legend>
                        <div class="form-group required">
                            <label for="input-address-1" class="col-sm-2 control-label">Adres</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="input-address-1" placeholder="Address 1" value="" ng-model="user.Adres">
                            </div>
                        </div>
                        <div class="form-group required" ng-init="GetAllCities()">
                            <label for="input-city" class="col-sm-2 control-label">İl</label>
                            <div class="col-sm-10">
                                <select ng-options="item.IlID as item.IlAd for item in cities" ng-model="user.IlID">
                                    <option value=""></option>
                                </select>
                            </div>
                        </div>
                        @*<div class="form-group required">
                            <label for="input-city" class="col-sm-2 control-label">İlçe</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="input-city" placeholder="İl" value="" name="city">
                            </div>
                        </div>*@
                    </fieldset>
                    <fieldset>
                        <legend>Your Password</legend>
                        <div class="form-group required">
                            <label for="input-password" class="col-sm-2 control-label">Şifre</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" id="input-password" placeholder="Şifre" value="" ng-model="user.Sifre">
                            </div>
                        </div>
                        <div class="form-group required">
                            <label for="input-confirm" class="col-sm-2 control-label">Şifre Doğrulama</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" id="input-confirm" placeholder="Şifre Doğrulama" value="" ng-model="user.SifreTekrar">
                            </div>
                        </div>
                    </fieldset>
                    <fieldset>
                        <legend>Mail Bilgilendirme</legend>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">İzin Verme</label>
                            <div class="col-sm-10">
                                <label class="radio-inline">
                                    <input type="checkbox" ng-model="user.MailIzin">
                                </label>
                                </div>
                        </div>
                    </fieldset>
                    <div class="buttons">
                        <div class="pull-right">
                            <input type="checkbox" value="1" name="agree">
                            &nbsp;I have read and agree to the <a class="agree" href="#"><b>Privacy Policy</b></a> &nbsp;
                            <input type="submit" class="btn btn-primary" value="Devam" ng-click="Register(user)">
                        </div>
                    </div>
                </form>
            </div>
            <!--Middle Part End -->
            <!--Right Part Start -->
            <aside id="column-right" class="col-sm-3 hidden-xs">
                <h3 class="subtitle">Üyelik</h3>
                <div class="list-group">
                    <ul class="list-item">
                        <li><a href="login.html">Giriş</a></li>
                        <li><a href="register.html">Kayıt Ol</a></li>
                        <li><a href="#">Şifremi Unuttum</a></li>
                        <li><a href="#">Hesabım</a></li>
                        <li><a href="wishlist.html">İstekler</a></li>
                        <li><a href="#">Sipariş Geçmişi</a></li>
                        <li><a href="#">Hediye Puanlar</a></li>
                        <li><a href="#">Geri Gönderilen Ürünler</a></li>
                        <li><a href="#">İşlemler</a></li>
                    </ul>
                </div>
            </aside>
            <!--Right Part End -->
        </div>
    </div>
</div>